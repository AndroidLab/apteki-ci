<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.apteka.faq.presentation.FaqViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_secondary">

        <ru.apteka.components.ui.boundcy.BouncyNestedScrollView
            android:id="@+id/svHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/llFaq"
            android:layout_below="@id/faqToolbar"
            android:fillViewport="true"
            android:scrollbars="none">

            <ru.apteka.components.ui.LoaderLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:isLoading="@{viewModel.isLoading}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:forItems="@{viewModel.faq}"
                    app:useTemplate="@{@layout/faq_template}" />

            </ru.apteka.components.ui.LoaderLayout>

        </ru.apteka.components.ui.boundcy.BouncyNestedScrollView>

        <!-- Туул бар -->
        <include
            android:id="@+id/faqToolbar"
            layout="@layout/toolbar" />

        <!-- Кнопка -->
        <LinearLayout
            android:id="@+id/llFaq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/top_corners_shape"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faq_write_title"
                android:textColor="@color/dark_black"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faq_write_desc"
                android:textColor="@color/dark_black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/faq_write_to_us" />

        </LinearLayout>

    </RelativeLayout>

</layout>