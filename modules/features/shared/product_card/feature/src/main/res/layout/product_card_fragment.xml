<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.apteka.product_card.presentation.ProductCardViewModel" />

        <variable
            name="fragment"
            type="ru.apteka.product_card.presentation.ProductCardFragment" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_secondary"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/white"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/white"
                android:fitsSystemWindows="true"
                app:contentScrim="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <!-- Картинки продукции -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProductCardImages"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="horizontal"
                    app:circlePagerIndicator="@{8}"
                    app:colorActive="@{@color/color_primary}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_collapseMode="parallax"
                    app:linearSnapHelper="@{true}" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="pin">

                    <FrameLayout
                        android:id="@+id/productCardAptekiLocation1"
                        android:layout_width="@dimen/toolbar_height"
                        android:layout_height="@dimen/toolbar_height"
                        android:layout_gravity="end"
                        android:layout_marginEnd="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lavProductCardAptekiLocation1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleX="2.5"
                            android:scaleY="2.5"
                            app:lottie_autoPlay="false"
                            app:lottie_colorFilter="@color/color_primary"
                            app:lottie_rawRes="@raw/location_search"
                            app:lottie_repeatCount="0"
                            app:lottie_speed="0.3" />

                    </FrameLayout>

                </com.google.android.material.appbar.MaterialToolbar>

                <!-- Описание продукции -->
                <TextView
                    android:id="@+id/tvProductCardDesc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="120dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="@{viewModel.product.desc}"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/productCardToolBarSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/grey" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/productCardAptekiLocation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/ic_location"
            android:translationY="-28dp"
            app:backgroundTint="@color/color_primary"
            app:layout_anchor="@id/appbar"
            app:layout_anchorGravity="bottom|end"
            app:maxImageSize="32dp"
            app:tint="@color/white"
            tools:ignore="ContentDescription" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsvProductCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_secondary"
            android:fillViewport="true"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Заголовок -->
                <LinearLayout
                    android:id="@+id/productCardDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_corners_shape"
                    android:orientation="vertical">

                    <!-- Лэйблы -->
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp"
                        app:flexWrap="wrap"
                        app:forItems="@{viewModel.product.labels}"
                        app:useTemplate="@{@layout/label_view}" />

                    <include layout="@layout/separator_view" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp">

                        <!-- Рэйтинг -->
                        <include
                            layout="@layout/icon_value_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="4dp"
                            android:paddingVertical="8dp"
                            app:background="@{@drawable/shape_circle_grey_icon}"
                            app:icon="@{@drawable/ic_star}"
                            app:value="@{viewModel.product.rating}" />

                        <!-- Комментарии -->
                        <include
                            layout="@layout/icon_value_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="4dp"
                            android:paddingVertical="8dp"
                            app:background="@{@drawable/shape_circle_grey_icon}"
                            app:icon="@{@drawable/ic_comment}"
                            app:value="@{viewModel.product.rating}" />

                        <!-- Ссылка -->
                        <include
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            layout="@layout/shared_link_view"
                            android:layout_marginHorizontal="4dp"
                            android:layout_marginVertical="8dp"
                            app:link="@{`https://social-apteka.ru/`}"/>

                        <!-- Избранное -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="4dp"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/shape_circle_grey_icon"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="center"
                                android:src="@drawable/ic_favorite_off"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


                <!-- Форма выпуска -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pricePageReleaseForm"
                    style="@style/Theme.Socapteki.BackgroundCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/product_card_release_form"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_expand"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Описание -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Theme.Socapteki.BackgroundCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include
                            layout="@layout/product_card_price_page_desc_item"
                            app:desc="@{viewModel.product.manufacturer}"
                            app:title="@{@string/product_card_manufacturer}" />

                        <include layout="@layout/separator_view" />

                        <include
                            layout="@layout/product_card_price_page_desc_item"
                            app:desc="@{viewModel.product.manufacturer}"
                            app:title="@{@string/product_card_active_substance}" />

                        <include layout="@layout/separator_view" />

                        <include
                            layout="@layout/product_card_price_page_desc_item"
                            app:desc="@{viewModel.product.dosage}"
                            app:title="@{@string/product_card_dosage}" />

                        <include layout="@layout/separator_view" />

                        <include
                            layout="@layout/product_card_price_page_desc_item"
                            app:desc="@{viewModel.product.expirationDate}"
                            app:title="@{@string/product_card_expiration_date}" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!--  -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Theme.Socapteki.BackgroundCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_bonuses_x2"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:layout_weight="1"
                                android:text="Двойные бонусы при заказе через приложение"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_expand"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                        <include
                            layout="@layout/separator_view"
                            app:sepMargin="@{16}" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_nothing"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:layout_weight="1"
                                android:text="Узнать больше о программе производителя"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_expand"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Блок выбора параметров товара -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Theme.Socapteki.BackgroundCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        app:forItems="@{viewModel.product.variants}"
                        app:useTemplate="@{@layout/product_card_variant_view}"/>

                </com.google.android.material.card.MaterialCardView>

                <!-- Цена -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Theme.Socapteki.BackgroundCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/price" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="От +20 бонусов"
                                android:textColor="@color/color_primary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Текущая цена -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.product.price}"
                                android:textSize="22sp" />

                            <!-- Процент скидки -->
                            <include
                                layout="@layout/discount_percentage_view"
                                app:discount="@{viewModel.product.discount}" />

                        </LinearLayout>

                        <!-- Старая цена -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.product.discount.oldPrice}"
                            android:textColor="@color/dark_grey"
                            android:textSize="16sp"
                            app:isStrikethrough="@{true}" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="12dp"
                            app:cardBackgroundColor="@color/light_red"
                            app:cardCornerRadius="8dp"
                            app:contentPaddingBottom="4dp"
                            app:contentPaddingLeft="8dp"
                            app:contentPaddingRight="8dp"
                            app:contentPaddingTop="4dp"
                            app:strokeWidth="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-1000 ₽ при покупке второй упаковки"
                                android:textColor="@color/red" />

                        </com.google.android.material.card.MaterialCardView>

                        <include layout="@layout/separator_view" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_product_info"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:text="Цена действует только при заказе на сайте" />

                        </LinearLayout>

                        <include layout="@layout/separator_view" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_product_info"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:text="В наличии: 140 аптеках" />

                        </LinearLayout>

                        <include layout="@layout/separator_view" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:orientation="horizontal">

                            <include
                                layout="@layout/product_card_delivery_desc_view"
                                app:date="@{viewModel.product.pickupDate}"
                                app:desc="@{@string/product_card_pickup}"
                                app:icon="@{@drawable/ic_pickup}" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <include
                                layout="@layout/product_card_delivery_desc_view"
                                app:date="@{viewModel.product.homeDeliveryDate}"
                                app:desc="@{@string/product_card_home_delivery}"
                                app:icon="@{@drawable/ic_home_delivery}" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Агалоги лекарста -->
                <include
                    android:id="@+id/pricePageSimilarProducts"
                    layout="@layout/horizontal_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:isLoading="@{viewModel.isSimilarProductsLoading}"
                    app:textBtn="@{@string/all}"
                    app:title="@{@string/similar_products}" />

                <!-- С этим товаром покупают -->
                <include
                    android:id="@+id/pricePageWithProduct"
                    layout="@layout/horizontal_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:isLoading="@{viewModel.isWithProductProductsLoading}"
                    app:textBtn="@{@string/all}"
                    app:title="@{@string/with_products}" />

                <!-- Блок с сылками на сосдние табы -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Theme.Socapteki.BackgroundCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:paddingVertical="4dp">

                    <!-- Инструкция по применению -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Инструкция по применению -->
                        <include
                            layout="@layout/product_card_price_menu_item"
                            app:icon="@{@drawable/ic_instructions_use}"
                            app:onClick="@{fragment.goToSimilarProducts}"
                            app:title="@{@string/price_page_instructions_use_item}" />

                        <!-- Наличие в аптеках -->
                        <include
                            layout="@layout/product_card_price_menu_item"
                            app:icon="@{@drawable/ic_availability_apteki}"
                            app:onClick="@{fragment.goToSimilarProducts}"
                            app:title="@{@string/price_page_availability_apteki}" />

                        <!-- Отзывы -->
                        <include
                            layout="@layout/product_card_price_menu_item"
                            app:icon="@{@drawable/ic_reviews}"
                            app:onClick="@{fragment.goToSimilarProducts}"
                            app:title="@{@string/price_page_reviews_products}" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <!-- Цена и положить в корзину -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@{viewModel.product.price}"
                        android:textSize="22sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/basketToPromotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="4dp"
                        android:text="@string/price_page_add_basket" />

                </FrameLayout>

                <!-- Блок с инструкциями -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/productCardInstructions"
                    style="@style/Theme.Socapteki.BackgroundCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginVertical="8dp"
                            android:text="@string/product_card_instruction"
                            android:textColor="@color/color_primary"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:forItems="@{viewModel.productInstruction}"
                            app:useTemplate="@{@layout/product_card_instruction_item}" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Блок с комментариями -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/productCardComments"
                    style="@style/Theme.Socapteki.BackgroundCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end|center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <!-- Рейтинг -->
                            <include
                                layout="@layout/icon_value_view"
                                app:icon="@{@drawable/ic_star}"
                                app:value="@{String.valueOf(viewModel.productComments.rating)}" />

                            <!-- Комментрии -->
                            <include
                                layout="@layout/icon_value_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                app:icon="@{@drawable/ic_comment}"
                                app:value="@{String.valueOf(viewModel.productComments.commentCount)}" />

                        </LinearLayout>

                        <!-- Список комментариев -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:forItems="@{viewModel.productComments.comments}"
                            app:useTemplate="@{@layout/product_card_comment_item_view}" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="@string/product_card_send_comment" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/productCardTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:translationY="20dp"
            app:layout_anchor="@id/appbar"
            app:layout_anchorGravity="bottom|end">

            <include
                android:id="@+id/productCardDescTab"
                layout="@layout/product_card_tab"
                app:name="@{@string/product_card_tab_price}" />

            <include
                android:id="@+id/productCardInstructionsTab"
                layout="@layout/product_card_tab"
                app:name="@{@string/product_card_tab_instruction}" />

            <include
                android:id="@+id/productCardCommentsTab"
                layout="@layout/product_card_tab"
                app:name="@{@string/product_card_tab_reviews}" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>