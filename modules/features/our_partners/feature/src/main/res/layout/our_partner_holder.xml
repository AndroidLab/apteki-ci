    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="kotlin.Unit" />

    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/Theme.Socapteki.BackgroundCard"
