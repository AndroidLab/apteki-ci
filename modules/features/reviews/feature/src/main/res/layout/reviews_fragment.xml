<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="ru.apteka.reviews.presentation.ReviewsViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_secondary">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/svReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/flReviews"
            android:layout_below="@id/reviewsInfo"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <ru.apteka.components.ui.LoaderLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isLoading="@{viewModel.isLoading &amp; viewModel.reviews.empty}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:visibleIf="@{!viewModel.reviews.empty}">

                    <com.alab.extra_bouncy.BouncyRecyclerView
                        android:id="@+id/rvReviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:bouncyRecyclerviewOverscrollMode="OVERSCROLL_START"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="12dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_horizontal"
                            android:onClick="@{() -> viewModel.getMoreReviews()}"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:text="@string/reviews_show_more"
                            android:textColor="@color/color_primary"
                            app:visibleIf="@{!viewModel.reviews.empty &amp; !viewModel.isLoading}" />

                        <ProgressBar
                            style="@style/Theme.Socapteki.ProgressBar"
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:layout_gravity="center"
                            android:indeterminateOnly="true"
                            android:padding="20dp"
                            app:visibleIf="@{!viewModel.reviews.empty &amp; viewModel.isLoading}" />

                    </FrameLayout>

                </LinearLayout>

            </ru.apteka.components.ui.LoaderLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- Туул бар -->
        <include
            android:id="@+id/reviewsToolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/reviewsInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reviewsToolbar"
            android:background="@color/white"
            android:orientation="vertical"
            app:visibleIf="@{!viewModel.reviews.empty}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <Spinner
                    android:id="@+id/sReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/sorts" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <include
                    layout="@layout/icon_value_view"
                    app:icon="@{@drawable/ic_star}"
                    app:value="@{`123`}" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <include
                    layout="@layout/icon_value_view"
                    app:icon="@{@drawable/ic_comment}"
                    app:value="@{`123`}" />

            </LinearLayout>

            <include layout="@layout/separator_view" />

        </LinearLayout>

        <include
            layout="@layout/shadow_view"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_above="@id/flReviews" />

        <!-- Кнопка 'Отправить отзыв' -->
        <FrameLayout
            android:id="@+id/flReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/reviews_send" />

        </FrameLayout>

    </RelativeLayout>

</layout>