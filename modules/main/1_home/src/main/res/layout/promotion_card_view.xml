<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="ru.apteka.home.data.models.PromotionModel" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/promotionCardItem"
        android:layout_width="180dp"
        android:layout_height="140dp"
        app:cardBackgroundColor="@color/color_secondary_container"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Лэйблы -->
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:flexWrap="wrap"
                app:forItems="@{model.labels}"
                app:useTemplate="@{@layout/label_view}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.Socapteki.HeaderH4"
                    android:text="@{model.title}"
                    android:textColor="@color/dark_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.description}"
                    android:textColor="@color/dark_black" />

            </LinearLayout>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>