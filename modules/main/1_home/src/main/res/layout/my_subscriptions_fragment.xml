<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.apteka.home.presentation.my_subscriptions.MySubscriptionsViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_secondary"
        android:orientation="vertical">

        <include
            android:id="@+id/mySubscriptionsToolbar"
            layout="@layout/toolbar" />

        <ru.apteka.components.ui.LoaderLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:isLoading="@{viewModel.isLoading}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_corners_shape"
                    android:orientation="vertical"
                    android:paddingVertical="4dp">

                    <!-- Смс уведомления -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="@{!viewModel.isLoading}"
                        android:gravity="center_vertical"
                        android:onClick="@{() -> viewModel.clickSmsNotice()}"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="@={viewModel.smsNotice}"
                            android:clickable="false"
                            android:enabled="@{!viewModel.isLoading}" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/my_subscriptions_sms_notice" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/my_subscriptions_sms_notice_desc"
                                android:textColor="@color/light_black" />

                        </LinearLayout>

                    </LinearLayout>

                    <include
                        layout="@layout/separator_view"
                        app:sepMarginEnd="@{16}"
                        app:sepMarginStart="@{16}" />

                    <!-- Емайл уведомления -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="@{!viewModel.isLoading}"
                        android:gravity="center_vertical"
                        android:onClick="@{() -> viewModel.clickMailNotice()}"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:checked="@={viewModel.mailNotice}"
                            android:clickable="false"
                            android:enabled="@{!viewModel.isLoading}" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/my_subscriptions_mail_notice" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/my_subscriptions_mail_notice_desc"
                                android:textColor="@color/light_black" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:enabled="@{viewModel.isChanged}"
                    android:onClick="@{() -> viewModel.save()}"
                    android:text="@string/my_subscriptions_save" />

            </LinearLayout>

        </ru.apteka.components.ui.LoaderLayout>

    </LinearLayout>

</layout>