<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/catalog_graph"
    app:startDestination="@id/catalogFragment">

    <fragment
        android:id="@+id/catalogFragment"
        android:name="ru.apteka.catalog.presentation.catalog.CatalogFragment"
        android:label="@string/catalog_title"
        tools:layout="@layout/catalog_fragment">

        <action
            android:id="@+id/to_catalogProductsFragment"
            app:destination="@id/catalogProductsFragment" />

    </fragment>

    <fragment
        android:id="@+id/catalogProductsFragment"
        android:name="ru.apteka.catalog.presentation.catalog_products.CatalogProductsFragment"
        tools:layout="@layout/catalog_products_fragment">

        <argument
            android:name="catalogItemName"
            app:argType="string" />

        <action
            android:id="@+id/to_catalogProductRecommendationFragment"
            app:destination="@id/catalogProductRecommendationFragment" />


    </fragment>

    <fragment
        android:id="@+id/catalogProductRecommendationFragment"
        android:name="ru.apteka.catalog.presentation.recommendations.CatalogProductRecommendationFragment"
        tools:layout="@layout/catalog_product_recommendation_fragment">

        <argument
            android:name="title"
            app:argType="integer" />

        <argument
            android:name="desk"
            app:argType="integer" />

    </fragment>


</navigation>
