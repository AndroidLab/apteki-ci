<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="catalogProductFilterModel"
            type="ru.apteka.catalog.data.models.IFilter" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/layer_shadow_top" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> catalogProductFilterModel.apply()}"
            android:layout_margin="8dp"
            android:enabled="@{catalogProductFilterModel.isChanged}"
            android:text="@string/apply" />

    </LinearLayout>

</layout>