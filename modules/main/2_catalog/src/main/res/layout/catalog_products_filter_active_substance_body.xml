<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="catalogProductFilterModel"
            type="ru.apteka.catalog.data.models.IFilter.FilterActiveSubstanceModel" />

        <variable
            name="lifecycle"
            type="androidx.lifecycle.LifecycleOwner" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/catalog_products_filter_title"
            app:title="@{catalogProductFilterModel.title}" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Theme.Socapteki.BackgroundCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/base_padding"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/light_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:orientation="vertical"
                app:forItems="@{catalogProductFilterModel.items}"
                app:lifecycleOwner="@{lifecycle}"
                app:useTemplate="@{@layout/catalog_products_filter_active_substance_template}"
                app:visibleIf="@{catalogProductFilterModel.mediator}" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</layout>