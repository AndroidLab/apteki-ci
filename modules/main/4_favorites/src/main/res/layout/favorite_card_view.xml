<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="ru.apteka.favorites.presentation.favorites.data.models.FavoritesCardModel" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/favoriteCardItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <!-- Картинка -->
                <include
                    layout="@layout/image_card"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="@dimen/base_padding"
                    app:imageUrl="@{model.favorite.imageSrc}" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Лэйблы -->
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_padding"
                        app:flexWrap="wrap"
                        app:forItems="@{model.favorite.labels}"
                        app:useTemplate="@{@layout/label_view}" />

                    <!-- Заголовок -->
                    <TextView
                        style="@style/Theme.Socapteki.HeaderH4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@{model.favorite.title}"
                        android:textStyle="bold" />

                    <!-- Описание -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@{model.favorite.description}" />

                    <!-- Актуальная цена -->
                    <TextView
                        style="@style/Theme.Socapteki.Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@{model.favorite.price}" />

                    <!-- Старая цена -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:visibleIf="@{model.favorite.oldPrice != null}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{model.favorite.oldPrice}"
                            android:textColor="@color/dark_grey"
                            app:isStrikethrough="@{true}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@{model.favorite.discount}"
                            android:textColor="@color/red" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/base_padding"
                android:background="@color/light_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Сердечко -->
                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="@{(view) -> model.onFavoriteClick.invoke(view, model)}"
                    android:padding="8dp"
                    android:src="@drawable/ic_favorite"
                    tools:ignore="ContentDescription" />

                <!-- Корзина -->
                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="@{(view) -> model.onBaskedClick.invoke(view, model)}"
                    android:padding="8dp"
                    android:src="@drawable/ic_basket"
                    app:imageTint="@{model.isAddedInBasket ? @color/red : @color/dark_grey}"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>