<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Socapteki" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_variant</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorOnPrimaryFixedVariant">@color/red</item>
        <!-- Secondary brand color. -->
        <!--<item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/grey</item>-->
        <item name="colorOnSecondary">@color/dark_black</item>
        <item name="colorSecondaryContainer">@color/color_secondary_container</item>

    </style>

    <style name="Theme.Socapteki" parent="Base.Theme.Socapteki" />

    <style name="Theme.Socapteki.ProgressBar" parent="Theme.MaterialComponents.DayNight">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/color_primary</item>
    </style>

    <style name="Theme.Socapteki.HeaderBase" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_black</item>
        <!--<item name="fontFamily">@font/montserrat</item>-->
    </style>

    <style name="Theme.Socapteki.HeaderH5" parent="Theme.Socapteki.HeaderBase">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Socapteki.HeaderH4" parent="Theme.Socapteki.HeaderBase">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Socapteki.HeaderH3" parent="Theme.Socapteki.HeaderBase">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Socapteki.HeaderH2" parent="Theme.Socapteki.HeaderBase">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.Socapteki.HeaderH1" parent="Theme.Socapteki.HeaderBase">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Socapteki.HeaderH0" parent="Theme.Socapteki.HeaderBase">
        <item name="android:textSize">26sp</item>
    </style>

</resources>