<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="ru.apteka.components.data.utils.ExtensionsMethodsKt" />

        <variable
            name="title"
            type="String" />

        <variable
            name="textBtn"
            type="String" />

        <variable
            name="linearSnapHelper"
            type="Boolean" />

        <variable
            name="isLoading"
            type="androidx.lifecycle.LiveData&lt;Boolean&gt;" />

        <variable
            name="marginItemHorizontal"
            type="Integer" />

        <variable
            name="circlePagerIndicator"
            type="Integer" />

    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/Theme.Socapteki.BackgroundCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/header"
                layout="@layout/horizontal_list_header"
                app:textBtn="@{textBtn}"
                app:title="@{title}" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layoutPaddingBottom="@{title != null | textBtn != null ? 8 : 16 }"
                    app:layoutPaddingTop="@{title != null | textBtn != null ? 8 : 16 }"
                    app:circlePagerIndicator="@{circlePagerIndicator}"
                    app:linearSnapHelper="@{linearSnapHelper}"
                    app:marginItemHorizontal="@{marginItemHorizontal == null ? 16 : marginItemHorizontal}" />

                <include
                    layout="@layout/progress_bar"
                    app:isLoading="@{isLoading}" />

            </FrameLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>