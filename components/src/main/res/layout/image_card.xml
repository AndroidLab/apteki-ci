<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="imageUrl"
            type="String" />

        <variable
            name="padding"
            type="Integer" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/light_grey"
        app:strokeWidth="1dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutPaddingStart="@{padding == null ? 8 : padding}"
            app:layoutPaddingTop="@{padding == null ? 8 : padding}"
            app:layoutPaddingEnd="@{padding == null ? 8 : padding}"
            app:layoutPaddingBottom="@{padding == null ? 8 : padding}"
            android:scaleType="centerCrop"
            android:background="@drawable/image_stub"
            app:glideImageRes="@{imageUrl}"
            tools:ignore="ContentDescription" />

    </com.google.android.material.card.MaterialCardView>

</layout>