<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="ru.apteka.components.data.models.OrderStatus" />

        <variable
            name="model"
            type="ru.apteka.components.data.models.OrderModel" />

    </data>

    <LinearLayout
        android:id="@+id/llOrderItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Статус заказа -->
                <include
                    layout="@layout/label_view"
                    app:backgroundColor="@{model.status.getBackgroundColor(context, model.status)}"
                    app:text="@{model.status.title}"
                    app:textColor="@{model.status.getTextColor(context, model.status)}" />

                <!-- Номер заказа -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.format(@string/order_number, model.number)}"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Дата заказа -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.getFormatDate(context)}"
                android:textColor="@color/dark_grey"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_arrow_expand"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <include layout="@layout/separator_view" />

    </LinearLayout>


</layout>

